<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.1.0" group="system" method="upgrade">
	<name>popup Plugin</name>
	<author>Dylan</author>
	<version>1.0.0</version>
	<creationDate>Januari 2020</creationDate>
	<description>Een popup Plugin</description>
	<files>
		<filename>tks_popUp.xml</filename>
		<filename plugin="tks_popUp">tks_popUp.php</filename>
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="popuptext" type="text" label="Popup text" default="Standaard text"/>
				<field name="tijd" type="number" label="tijd na load voor popUp" default="4"/>
			</fieldset>
		</fields>
	</config>
</extension>
